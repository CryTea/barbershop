<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.barbershop.controllers.admin.AddManagerModalController">
    <children>
        <VBox spacing="15" alignment="CENTER"
              AnchorPane.topAnchor="20.0"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0">

            <Label text="Добавить менеджера"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="fullNameField"
                       promptText="ФИО менеджера"
                       maxWidth="300" />
            <TextField fx:id="usernameField"
                       promptText="Имя пользователя"
                       maxWidth="300" />
            <PasswordField fx:id="passwordField"
                           promptText="Пароль"
                           maxWidth="300" />

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="addButton"
                        text="Добавить"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="cancelButton"
                        text="Отмена"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </HBox>

            <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
        </VBox>
    </children>
</AnchorPane>
