<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.barbeshop.controllers.LoginController"
            style="-fx-background-color: #f4f4f4;">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
              style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);">

            <Label text="Barbershop Login"
                   style="-fx-font-size: 24px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

            <TextField fx:id="usernameField"
                       promptText="Username"
                       style="-fx-font-size: 14px; -fx-background-radius: 5;" />

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           style="-fx-font-size: 14px; -fx-background-radius: 5;" />

            <Label fx:id="errorLabel"
                   textFill="red"
                   style="-fx-font-size: 13px;" />

            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#onLogin"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 8 16;" />

        </VBox>
    </children>
</AnchorPane>
